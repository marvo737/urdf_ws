<!-- <? xml version = "1.0" ?> -->
<robot name = "SimpleMouse">
    <link name = "base_link" />
    <link name = "body">
        <visual>
            <geometry>
                <box size="0.07 0.13 0.055" />
            </geometry>
        </visual>
    </link>

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0.0275" rpy="0 0 0"/>
    </joint>

    <link name="wheel_r">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.008"/>
            </geometry>
        </visual>
    </link>

    <joint name="wheel_r_joint" type="continuous">
        <parent link="body"/>
        <child link="wheel_r"/>
        <origin xyz="0.04 0 -0.0055" rpy="0 1.571 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_l">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.008"/>
            </geometry>
        </visual>
    </link>

    <joint name="wheel_l_joint" type="continuous">
        <parent link="body"/>
        <child link="wheel_l"/>
        <origin xyz="-0.04 0 -0.0055" rpy="0 1.571 0"/>
        <axis xyz="0 0 1"/>
    </joint>

</robot>
